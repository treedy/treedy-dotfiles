alias ll='ls -lFA'
alias lh='ll -h'
alias vi='vi -u NONE'

# Docker aliases
alias dpsa='docker ps -a'
alias dps='docker ps'
alias dprune='docker images prune'
alias drmidangle='docker rmi $(docker images -f "dangling=true" -q)'


# A `cat` upgrade from https://github.com/sharkdp/bat
if executable_exists batcat; then # executable_exists is defined in ~/.zshrc
  alias bat='batcat'
  alias cat='batcat'
fi
